<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.vector57.enlight.MainActivity">

    <Switch
        android:text="Hallway "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hallway"
        android:checked="false"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:text="Living Room "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/livingRoom"
        android:checked="false"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        android:layout_below="@+id/hallway"
        android:layout_alignParentEnd="true" />

    <Switch
        android:text="Desk "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desk"
        android:checked="false"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        android:layout_below="@+id/livingRoom"
        android:layout_alignParentEnd="true" />

    <Switch
        android:text="Couch "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/couch"
        android:checked="false"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        android:layout_below="@+id/desk"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
